{
  "manifest_version": 3,
  "name": "My Dev Dashboard",
  "version": "1.0.0",
  "description": "Developer-focused new tab with quick links, ports, and search.",
  "action": { "default_popup": "popup.html", "default_icon": { "128": "icon128.png" } },
  "icons": { "128": "icon128.png" },
  "chrome_url_overrides": { "newtab": "newtab.html" },
  "background": { "service_worker": "src/background.ts", "type": "module" },
  "permissions": ["tabs", "storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content_customize.ts", "src/content_fullpage.ts"],
      "run_at": "document_end"
    }
  ]
}


